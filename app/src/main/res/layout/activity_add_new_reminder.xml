<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E3E3E3"
    tools:context=".add_new_Reminder"
    android:padding="6dp"
    >
    <RelativeLayout
        android:id="@+id/header_add_reminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"

        android:layout_marginBottom="12dp">
        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_arrow_back_24"/>

        <TextView
            android:id="@+id/page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/font_01"
            android:text="Set Reminder"
            android:textSize="24sp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/title_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_edittext"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="12dp"
        android:hint="Title.."
        android:inputType="textCapSentences"
        android:fontFamily="@font/font_01"
        android:layout_below="@id/header_add_reminder"
        />

    <EditText
        android:id="@+id/Date_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_edittext"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="12dp"
        android:hint="Select Date"
        android:focusable="false"
        android:clickable="true"
        android:fontFamily="@font/font_01"
        android:layout_below="@id/title_edittext"
        />
    <EditText
        android:id="@+id/Time_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_edittext"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="12dp"
        android:hint="Select Time"
        android:fontFamily="@font/font_01"
        android:layout_below="@id/Date_editText"
        android:focusable="false"
        android:clickable="true"
        />


    <EditText
        android:id="@+id/Details_Edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_edittext"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="24dp"
        android:paddingStart="12dp"
        android:layout_marginBottom="12dp"
        android:hint="Detail.."
        android:fontFamily="@font/font_01"
        android:layout_below="@id/Time_editText"
        android:gravity="top"
        android:lines="8"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/SaveReminder_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"

        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="14dp"
        android:elevation="4dp"
        android:src="@drawable/done_img"
        app:backgroundTint="@color/off_white" />
</RelativeLayout>